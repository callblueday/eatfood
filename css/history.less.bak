@import "base.less";

.container {
  .tab{
    float: left;
    display: block;
    margin-right: 10px;
    border: 2px solid #000;
    cursor: pointer;
  }
  
  .order-list {
    clear:both;
    border: 2px solid #000;

    .order-item {
      cursor: pointer;
    }

    .order-detail {
      display: none;
      width: 300px;
      min-height: 100px;
      overflow: hidden;

      .food {
        float: left;
        width: 90px;
        margin-right: 5px;
      }

      .food-img {
        width: 50px;
        height: 50px;
        border-radius: 50px;
        margin-right: 20px;
      }

      .food-tip {
        display: block;
        clear: both;

        span {
          display: block;
        }
      }
    }
  }

  .analysis-list {
    display: none;
    clear: both;
    width: 100%;
    min-height: 500px;
    overflow: hidden;
    border: 2px solid #000;

    .table{
      .food-pop{

        .popfood{
          float: left;
          min-width: 120px;
          margin-right: 5px;
          text-align: center;
        }
        .food-img {
          width: 120px;
          height: 120px;
          display: block;
          margin: 0 auto;
          border-radius: 120px;
        }

        .food-tip {
          margin-top: 5px;
          clear: both;

          span {
            text-align:center;
          }
        }
      }
    }
  }
  
}

